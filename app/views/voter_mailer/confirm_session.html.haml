:css
  @import url('https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;700&family=Inter:wght@300;400;500;600;700&family=Lexend:wght@100;200;300;400;500;600;700;800;900&family=Rubik:wght@400;500;600;700;800&display=swap');
%div{:style => "display: flex; flex-direction: column; justify-content: flex-start; align-items: center; align-self: stretch; flex-grow: 1; gap: 0.625rem; background: #84aea0;"}
  %div{:style => "display: flex; justify-content: center; align-items: center; align-self: stretch; flex-grow: 0; flex-shrink: 0; position: relative; gap: 5.5rem; padding-left: 0.6rem; padding-right: 0.6rem; padding-top: 0.7rem; padding-bottom: 0.7rem;"}
    %p{:style => "flex-grow: 0; flex-shrink: 0; font-size: 1.5rem; font-weight: bold; text-align: left; color: #0a1d18; font-family: 'Baloo 2', cursive;"}
      the votes are in,
      = @voter.name
  %div{:style => "display: flex; flex-direction: column; justify-content: flex-start; align-items: center; align-self: stretch; flex-grow: 1; gap: 0.1rem; padding-left: 0.5rem; padding-right: 0.5rem; padding-top: 0.6rem; padding-bottom: 0.6rem;"}
    %div{:style => "display: flex; flex-direction: column; justify-content: center; align-items: center; align-self: stretch; flex-grow: 0; flex-shrink: 0; padding-left: 0.55rem; padding-right: 0.55rem; padding-top: 0.5rem; padding-bottom: 0.5rem; border-radius: 0.5rem; background: #fff;"}
      %div{:style => "display: flex; flex-direction: column; justify-content: center; align-items: flex-start; flex-grow: 0; flex-shrink: 0; width: 21.688rem; position: relative; padding: 0.125rem;"}
        %p{:style => "flex-grow: 0; flex-shrink: 0; font-size: 1.25rem; font-weight: 500; text-align: left; text-transform: capitalize; color: #000; font-family: 'Lexend', sans-serif;"}
          = title @event.title
      %div{:style => "display: flex; flex-direction: column; justify-content: center; align-items: flex-start; flex-grow: 0; flex-shrink: 0; width: 21.688rem; position: relative; gap: 0.25rem; padding: 0.125rem;"}
        %p{:style => "flex-grow: 0; flex-shrink: 0; font-size: 1.25rem; text-align: left; color: #7c7c7c; font-family: 'Lexend', sans-serif;"}
          = description @event.description
    %div{:style => "display: flex; flex-direction: column; justify-content: center; align-items: center; align-self: stretch; flex-grow: 0; flex-shrink: 0; padding-left: 0.563rem; padding-right: 0.563rem; padding-top: 0.5rem; padding-bottom: 0.5rem; border-radius: 0.5rem; background: #fff;"}
      %div{:style => "display: flex; flex-direction: column; justify-content: center; align-items: flex-start; flex-grow: 0; flex-shrink: 0; width: 21.688rem; position: relative; gap: 0.625rem; padding: 0.625rem;"}
        %p{:style => "flex-grow: 0; flex-shrink: 0; font-size: 1.25rem; font-weight: 500; text-align: left; color: #000; font-family: 'Inter', sans-serif;"}
          Everyone voted on these days
      - days = @event.majority(@event.id)
      - if  days.empty? || days.nil?
      - else
        - days.each do | vote |
          - break unless vote[1] >= 2
          %div{:style => "display: flex; flex-direction: column; justify-content: center; align-items: flex-start; flex-grow: 0; flex-shrink: 0; width: 21.688rem; gap: 0.625rem; padding: 0.625rem;"}
            %div{:style => "display: flex; justify-content: center; align-items: center; align-self: stretch; flex-grow: 0; flex-shrink: 0; position: relative; gap: 0.75rem; padding: 0.625rem; border-radius: 0.563rem; background: #bddcd2;"}
              %p{:style => "flex-grow: 0; flex-shrink: 0; width: 14.5rem; font-size: 1.25rem; font-weight: 700; text-align: center; color: #000; font-family: 'Rubik', sans-serif;"}
                = Date.parse(vote[0].to_s).strftime("%A %b, %d")
              %div{:style => "display: flex; flex-direction: column; justify-content: center; align-items: center; flex-grow: 0; flex-shrink: 0; height: 1.125rem; width: 1.125rem; position: relative; overflow: hidden; gap: 0.625rem; padding: 0.625rem; border-radius: 360px; background: #f77;"}
                %p{:style => "flex-grow: 0; flex-shrink: 0; font-size: 0.938rem; font-weight: 700; text-align: center; color: #fff; font-family: 'Rubik', sans-serif;"}
                  = vote[1]
    %div{:style => "display: flex; flex-direction: column; justify-content: center; align-items: center; align-self: stretch; flex-grow: 0; flex-shrink: 0; padding-left: 0.563rem; padding-right: 0.563rem; padding-top: 0.5rem; padding-bottom: 0.5rem; border-radius: 0.5rem; background: #fff;"}
      %div{:style => "display: flex; flex-direction: column; justify-content: center; align-items: center; flex-grow: 0; flex-shrink: 0; width: 21.688rem; position: relative; gap: 0.625rem; padding: 0.625rem;"}
        %p{:style => "align-self: stretch; flex-grow: 0; flex-shrink: 0; width: 20.5rem; font-size: 1.25rem; font-weight: 500; text-align: center; color: #000; font-family: 'Inter', sans-serif;"}
          - friends = @event.voters.count
          = friends.humanize.titleize
          = "friend".pluralize(friends)
          joined
      %div{:style => "display: flex; flex-direction: column; justify-content: center; align-items: flex-start; flex-grow: 0; flex-shrink: 0; width: 21.688rem; position: relative; gap: 0.625rem; padding: 0.625rem;"}
        - @event.voters.includes([:votes]).each do | voter |
          %p{:style => "align-self: stretch; flex-grow: 0; flex-shrink: 0; width: 20.5rem; font-size: 1rem; text-align: left; color: #7c7c7c; font-family: 'Inter', sans-serif;"}
            = "#{voter.name} has joined."
            - voter.votes.each do | vote |
              = vote.day.strftime("%a %d.")
