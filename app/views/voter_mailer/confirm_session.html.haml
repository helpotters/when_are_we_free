.max-h-screen.bg-primary.flex.flex-col.gap-4.px-2.lg:px-80.overflow-auto
  .text-center.py-4
    %ul.steps
      %li.text-white.font-bold.step.step-neutral Create Event
      %li.text-white.font-bold.step.step-neutral Share Schedule
      %li.text-white.font-bold.step Confirm
  .card.bg-white.justify-center.items-center.p-5.w-full.gap-1.flex.flex-col
    .card-body
      .card-title
        %p.text-md.font-lexend.font-bold.text-gray-400
          You've been invited,
          = @voter.name
          !
      .flex.flex-col.justify-start.items-start.text-left.w-full.gap-1
        %h1.text-2xl.font-lexend.font-bold.text-black.text-left{ data: {test_id: "event_title"} }
          test
        %p.text-lg.font-inter.text-gray.font-regular{ data: {test_id: "event_description"} }
          test
    .flex.flex-col.justify-center.items-start.gap-2
      = @majority.each do |day|
        .stats.w-auto.flex.flex-col
          .stat.bg-gray-200.flex.flex-row.rounded-lg.p-4.w-80.align-center.items-center.justify-center
            %span.stat-value.text-lg.font-rubik.text-black
              = day[0][1].to_s
            %span.stat-figure.justify-center.flex-col.flex.items-center
              .flex.justify-center.items-center.flex-grow-0.flex-shrink-0.w-6.h-6{:class => "rounded-[360px] bg-[#f77]"}
                .text-white.font-rubik
                  = day[0][2].to_s
